<Window x:Class="GidonitApp.Logger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GidonitApp"
        mc:Ignorable="d"
        Title="Logger" Height="300" Width="600" Closing="Window_Closing">
    <Grid>
        <TextBox Name="log" Foreground="White" AcceptsReturn="True" Background="Black" SelectionBrush="White" SelectionTextBrush="Black" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
